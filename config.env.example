# Configuración de despliegue para AWS Community Day Networking Passport
# Copia este archivo como config.env y ajusta los valores según tu entorno

# Configuración de AWS
AWS_REGION=us-east-1
STACK_NAME=networking-passport-colombia
S3_BUCKET=networking-passport-colombia-frontend

# Configuración de Eventbrite (opcional)
EVENTBRITE_PRIVATE_TOKEN=your_eventbrite_private_token_here

# Configuración de dominio personalizado (opcional)
CUSTOM_DOMAIN=your-domain.com
CERTIFICATE_ARN=arn:aws:acm:us-east-1:123456789012:certificate/your-certificate-id

# Configuración de CloudFront (opcional)
CLOUDFRONT_DISTRIBUTION_ID=your_cloudfront_distribution_id

# Configuración de monitoreo
ENABLE_APPLICATION_INSIGHTS=true
LOG_LEVEL=INFO

# Configuración de seguridad
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS_PER_SECOND=100
RATE_LIMIT_BURST_SIZE=200

# Configuración de DynamoDB
DYNAMODB_BILLING_MODE=PAY_PER_REQUEST
# Para cambiar a provisioned capacity, descomenta las siguientes líneas:
# DYNAMODB_BILLING_MODE=PROVISIONED
# DYNAMODB_READ_CAPACITY=5
# DYNAMODB_WRITE_CAPACITY=5

# Configuración de Lambda
LAMBDA_MEMORY_SIZE=128
LAMBDA_TIMEOUT=5

# Configuración de CORS
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,X-Amz-Date,Authorization,X-Api-Key,X-Amz-Security-Token 